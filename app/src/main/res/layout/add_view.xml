<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar2"
        android:elevation="12dp"
        app:title="Add new book">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/toolbar_menu"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="#FFF"
            android:imeOptions="normal"

            />

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="35dp">


            <TextView
                android:text="Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2px"
                android:id="@+id/add_textView_title" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:ems="12"
                android:layout_alignParentStart="true"
                android:id="@+id/editText_title"
                android:layout_marginBottom="25dp"
                android:hint="Title of the book..."
                style="@android:style/Widget.Material.EditText"
                android:capitalize="words" />


            <TextView
                android:text="Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2px"
                android:id="@+id/add_textView_author" />
            <EditText
                android:hint="Author name..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:ems="10"
                android:id="@+id/editText_author"
                android:layout_marginBottom="25dp"
                android:capitalize="words" />


            <TextView
                android:text="Publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2px"
                android:id="@+id/add_textView_publisher" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:ems="10"
                android:layout_marginBottom="25dp"
                android:id="@+id/editText_publisher"
                android:hint="Publisher name..."
                android:capitalize="words" />

            <TextView
                android:text="Year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2px"
                android:id="@+id/add_textView_year" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_marginBottom="25dp"
                android:id="@+id/editText_year"
                android:singleLine="true"
                android:hint="Year of publication..."
                android:capitalize="words" />


            <TextView
                android:text="Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2px"
                android:id="@+id/add_textView_category" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:ems="10"
                android:layout_marginBottom="25dp"
                android:id="@+id/editText_category"
                android:hint="Category of the book..."
                android:capitalize="words" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal evaluation"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:layout_gravity="center"
                android:layout_marginBottom="35dp"
                style="@android:style/Widget.Material.RatingBar"
                android:isIndicator="false"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:clickable="true"
                android:max="5"
                android:numStars="5" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:id="@+id/save_btn"
                android:paddingBottom="100dp">
                <Button
                    android:text="Cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/cancel_button"
                    android:elevation="7dp"/>
                <Button
                    android:text="Save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/save_button"
                    android:elevation="7dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>